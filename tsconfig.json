{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "declaration": true,
    "sourceMap": true,
    "allowJs": false,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true
  },
  "files": [
    "./node_modules/@types/webpack-env/index.d.ts",
    "./src/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "types": [
    "typePatches"
  ],
  "typeRoots": [
    "typings/global",
    "typings/modules"
  ]
}